<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tab_menu_text">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/tab_menu_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/tab_menu_text</item>
    </style>

    <style name="tab_menu_bgnum">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginLeft">-16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_menu_num_bg</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="tab_menu_rel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ly_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="lv_fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/fragment_lv_bg</item>
    </style>
</resources>
